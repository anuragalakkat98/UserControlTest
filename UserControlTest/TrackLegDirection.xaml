                <Canvas x:Name="TrackLegRightDownCanvas1" Width="{Binding DataContext.CanvasWidth, ElementName=TrackLegDirectionUserControl}" Height="{Binding DataContext.CanvasWidth, ElementName=TrackLegDirectionUserControl}">

                    <!--Elements under this canvas should be collpased to get the design to match the UIC default view-->
                    <Canvas x:Name="TrackLegRightDownCanvas2" Visibility="{Binding DataContext.TrackLegRightDownElementsVisibility, ElementName=TrackLegDirectionUserControl}">
