<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="UserControlTest.Intruder"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UserControlTest"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
 x:Name="IntruderUserControl"
 Width="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Width}"
 Height="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Height}">

    <Viewbox Stretch="Uniform">
        <Grid Background="Black">
            <Canvas Width="{Binding DataContext.CanvasWidth, ElementName=IntruderUserControl}" 
                    Height="{Binding DataContext.CanvasHeight, ElementName=IntruderUserControl}">

                <!-- OUTER BORDER with visibility property -->
                <Rectangle
                    x:Name="IntruderRectangle"
                    Visibility="{Binding DataContext.OuterRectangleVisibility, ElementName=IntruderUserControl}"
                    Canvas.Left="-150"
                    Canvas.Top="10"
                    Width="519"
                    Height="555"
                    Stroke="White"
                    StrokeThickness="15"
                    Fill="Transparent" />

                <!-- INNER BORDER -->
                <Rectangle
                    Canvas.Left="-125"
                    Canvas.Top="33"
                    Width="470"
                    Height="505"
                    Stroke="White"
                    StrokeThickness="15"
                    Fill="Transparent" />
            
                <!--START: Color-->
                <!--Head color fill-->
                <Canvas x:Name="IntruderCanvas" Visibility="{Binding DataContext.ColorFillVisibility, ElementName=IntruderUserControl}">
                <Path Canvas.Left="125"
                      Canvas.Top="65"
                      Stroke="White"
                      StrokeThickness="2"
                      Fill="White"
                      Data="M 50,0 A 50,50 0 1 1 50,100 A 50,50 0 1 1 50,0" />
                <!--Upper shoulder color fill-->
                <Path Stroke="White"
                      StrokeThickness="2"
                      Fill="White"
                      Data="
                        M 20,180
                        L 203,180
                        L 206,210
                        L 20,210
                        Z" />
                <!--Left arm color fill-->
                <Path 
                      Stroke="White" 
                      StrokeThickness="2"
                      Fill="White"
                      Data="
                        M 20,180
                        L 45,210
                        L 10,270
                        L -32,270
                        Z" />
                <!--Body color fill-->
                <Path Stroke="White"
                      StrokeThickness="2"
                      Fill="White"
                      Data="
                        M 78,210
                        L 180,210
                        L 140,270
                        L 112,320
                        L 24,320
                        Z
                      " />
                <!--LEFT LEG COLOR FILL-->
                <Path Stroke="White" StrokeThickness="2" Fill="White"
                      Data="
                        M 24,319
                        L 10,379
                        L -99,379    
                        L -99,415
                        L 46,415
                        L 46,415    
                        L 67,320
                        L 82,321
                        L 67,321
                        Z" />
                <!--RIGHT LEG COLOR FILL-->
                <Path Stroke="White"
                      StrokeThickness="2"
                      Fill="White"
                      Data="
                        M 179,210
                        L 125,320
                        L 124,320
                        L 214,510
                        L 205,510
                        L 175,510
                        L 171,510
                        L 81,320
                        Z" />
                <!--RIGHT ARM COLOR FILL-->
                <Path Stroke="White"
                      StrokeThickness="2"
                      Fill="White"
                      Data="
                        M 205,180
                        L 250,240
                        L 309,239
                        L 319,239
                        L 318,266
                        L 318,275
                        L 233,275
                        L 224,275
                        L 179,210
                        Z" />
                </Canvas>
                <!--END: Color-->

                <!--Head-->
                <Ellipse Canvas.Left="125"
                     Canvas.Top="65"
                     Width="100"
                     Height="100"
                     Stroke="White"
                     StrokeThickness="2"
                     Fill="Transparent"/>
                
                <!--Upper shoulder line-->
                <Line X1="90" Y1="80" X2="276" Y2="80" Stroke="White" StrokeThickness="2">
                    <Line.RenderTransform>
                        <TranslateTransform X="-70" Y="100"/>
                    </Line.RenderTransform>
                </Line>

                <!--LEFT ARM-->
                <Line X1="100" Y1="50" X2="48" Y2="140" Stroke="White" StrokeThickness="2">
                <Line.RenderTransform>
                        <TranslateTransform X="-80" Y="130"/>
                    </Line.RenderTransform>
                </Line>

                <Line X1="100" Y1="80" X2="65" Y2="140" Stroke="White" StrokeThickness="2">
                    <Line.RenderTransform>
                        <TranslateTransform X="-55" Y="130"/>
                    </Line.RenderTransform>
                </Line>

                <Line X1="90" Y1="80" X2="48" Y2="80" Stroke="White" StrokeThickness="2">
                    <Line.RenderTransform>
                        <TranslateTransform X="-80" Y="190"/>
                    </Line.RenderTransform>
                </Line>

                <Line X1="90" Y1="80" X2="55" Y2="80" Stroke="White" StrokeThickness="2">
                    <Line.RenderTransform>
                        <TranslateTransform X="-11" Y="130"/>
                    </Line.RenderTransform>
                </Line>

                <Line X1="100" Y1="50" X2="46" Y2="160" Stroke="White" StrokeThickness="2">
                    <Line.RenderTransform>
                        <TranslateTransform X="-22" Y="160"/>
                    </Line.RenderTransform>
                </Line>

                <!--LEFT LEG-->
                <Line X1="100" Y1="50" X2="86" Y2="110" Stroke="White" StrokeThickness="2">
                    <Line.RenderTransform>
                        <TranslateTransform X="-76" Y="269"/>
                    </Line.RenderTransform>
                </Line>

                <Line X1="90" Y1="80" X2="200" Y2="80" Stroke="White" StrokeThickness="2">
                    <Line.RenderTransform>
                        <TranslateTransform X="-189" Y="299"/>
                    </Line.RenderTransform>
                </Line>

                <Line X1="90" Y1="80" X2="235" Y2="80" Stroke="White" StrokeThickness="2">
                    <Line.RenderTransform>
                        <TranslateTransform X="-189" Y="335"/>
                    </Line.RenderTransform>
                </Line>

                <Line X1="100" Y1="50" X2="78" Y2="145" Stroke="White" StrokeThickness="2">
                    <Line.RenderTransform>
                        <TranslateTransform X="-33" Y="270"/>
                    </Line.RenderTransform>
                </Line>

                <Line X1="90" Y1="80" X2="75" Y2="80" Stroke="White" StrokeThickness="2">
                    <Line.RenderTransform>
                        <TranslateTransform X="-8" Y="241"/>
                    </Line.RenderTransform>
                </Line>

                <Line X1="90" Y1="80" X2="89" Y2="118" Stroke="White" StrokeThickness="2">
                    <Line.RenderTransform>
                        <TranslateTransform X="-189" Y="298"/>
                    </Line.RenderTransform>
                </Line>

                <!--RIGHT LEG-->            
                <Line X1="100" Y1="50" X2="190" Y2="240" Stroke="White" StrokeThickness="2">
                    <Line.RenderTransform>
                        <TranslateTransform X="-19" Y="270"/>
                    </Line.RenderTransform>
                </Line>

                <Line X1="100" Y1="50" X2="190" Y2="240" Stroke="White" StrokeThickness="2">
                    <Line.RenderTransform>
                        <TranslateTransform X="24" Y="270"/>
                    </Line.RenderTransform>
                </Line>

                <Line X1="100" Y1="50" X2="46" Y2="160" Stroke="White" StrokeThickness="2">
                    <Line.RenderTransform>
                        <TranslateTransform X="79" Y="160"/>
                    </Line.RenderTransform>
                </Line>

                <Line X1="90" Y1="80" X2="45" Y2="80" Stroke="White" StrokeThickness="2">
                    <Line.RenderTransform>
                        <TranslateTransform X="125" Y="430"/>
                    </Line.RenderTransform>
                </Line>

                <!--RIGHT ARM-->
                <Line X1="100" Y1="80" X2="145" Y2="145" Stroke="White" StrokeThickness="2">
                    <Line.RenderTransform>
                        <TranslateTransform X="79" Y="130"/>
                    </Line.RenderTransform>
                </Line>

                <Line X1="100" Y1="80" X2="145" Y2="140" Stroke="White" StrokeThickness="2">
                    <Line.RenderTransform>
                        <TranslateTransform X="105" Y="100"/>
                    </Line.RenderTransform>
                </Line>

                <Line X1="90" Y1="80" X2="160" Y2="80" Stroke="White" StrokeThickness="2">
                    <Line.RenderTransform>
                        <TranslateTransform X="159" Y="159"/>
                    </Line.RenderTransform>
                </Line>

                <Line X1="90" Y1="80" X2="185" Y2="80" Stroke="White" StrokeThickness="2">
                    <Line.RenderTransform>
                        <TranslateTransform X="133" Y="195"/>
                    </Line.RenderTransform>
                </Line>

                <Line X1="90" Y1="80" X2="89" Y2="118" Stroke="White" StrokeThickness="2">
                    <Line.RenderTransform>
                        <TranslateTransform X="229" Y="158"/>
                    </Line.RenderTransform>
                </Line>
            </Canvas>
    </Grid>
    </Viewbox>
</UserControl>
