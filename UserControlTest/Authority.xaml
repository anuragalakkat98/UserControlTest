<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="UserControlTest.Authority"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UserControlTest"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Name="AuthorityUserControl"
    Width="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Width}"
    Height="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Height}">


    <Viewbox Stretch="Uniform">
        <Grid>
        <!--START: Authority Area E1-->
        <Grid Visibility="{Binding DataContext.AuthorityAreaE1Visibility, ElementName=AuthorityUserControl}">
            <!-- Inner center rectangle Body -->
            <Rectangle Stroke="White" Height= "50" Width= "150" Margin="0,0,0,0" />
            <!-- Outer center rectangle Body -->
            <Rectangle Stroke="White" Height= "60" Width= "160" Margin="0,0,0,0" />
            <!-- Region 4 Text -->
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Text="Region 4" FontWeight="Bold" FontSize="20" Foreground="White"/>
        </Grid>
        <!--END: Authority Area E1-->

        <!--START: Authority Set Area-->
        <Grid Visibility="{Binding DataContext.AuthoritySetAreaVisibility, ElementName=AuthorityUserControl}">
            <!-- Inner center rectangle Body -->
            <Rectangle Stroke="White" Height= "50" Width= "150" Margin="0,0,0,0" />
            <!-- Outer center rectangle Body -->
            <Rectangle Stroke="White" Height= "60" Width= "160" Margin="0,0,0,0" />
            <!-- SSCC Text -->
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Text="SSCC" FontWeight="Bold" FontSize="20" Foreground="White"/>
        </Grid>
        <!--END: Authority Set Area-->

        <!--START: Authority Status-->
        <Grid Visibility="{Binding DataContext.AuthorityStatusVisibility, ElementName=AuthorityUserControl}">
            <!-- rectangle Body -->
            <Rectangle Stroke="White" Height= "100" Width= "100" Margin="10,0,0,0" />
        </Grid>
        <!--END: Authority Status-->

        <!--START: System Stop-->
        <Grid Visibility="{Binding DataContext.SystemStopVisibility, ElementName=AuthorityUserControl}">
            <!-- Inner center rectangle Body -->
            <Rectangle Stroke="White" Height= "50" Width= "200" Margin="0,0,0,0" />
            <!-- Outer center rectangle Body -->
            <Rectangle Stroke="White" Height= "60" Width= "210" Margin="0,0,0,0" />
            <!-- Region Stop Text-->
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Text="Region Stop" FontWeight="Bold" FontSize="20" Foreground="White"/>
        </Grid>
        <!--END: System Stop-->

        <!--START: ARS Button-->
        <Grid Visibility="{Binding DataContext.ArsButtonVisibility, ElementName=AuthorityUserControl}">
            <!-- Inner center rectangle Body -->
            <Rectangle Stroke="White" Height= "50" Width= "200" Margin="0,0,0,0" />
            <!-- Outer center rectangle Body -->
            <Rectangle Stroke="White" Height= "60" Width= "210" Margin="0,0,0,0" />
            <!-- ARS Disable Text -->
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Text="ARS Disable" FontWeight="Bold" FontSize="20" Foreground="White"/>
        </Grid>
        <!--END: ARS Button-->

        <!--START: TSR Confirmation-->
            <Grid Visibility="{Binding DataContext.TsrConfirmationVisibility, ElementName=AuthorityUserControl}">
                <!-- Sun Body -->
                <Ellipse Width="50" Height="50" Stroke="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <!-- Sun Rays 1 -->
                <Rectangle Stroke="White" Height= "11" Width= "25" Margin="90,0,0,0" />
                <!-- Sun Rays 2 -->
                <Rectangle Stroke="White" Height= "11" Width= "25" Margin="0,0,90,0" />
                <!-- Sun Rays 3 -->
                <Rectangle Stroke="White" Height= "11" Width= "25" Margin="35,75,0,0" >
                    <Rectangle.RenderTransform>
                        <RotateTransform Angle="90" CenterX="0" CenterY="0" />
                    </Rectangle.RenderTransform>
                </Rectangle>
                <!-- Sun Rays 4 -->
                <Rectangle Stroke="White" Height= "11" Width= "25" Margin="35,0,0,100" >
                    <Rectangle.RenderTransform>
                        <RotateTransform Angle="90" CenterX="0" CenterY="0" />
                    </Rectangle.RenderTransform>
                </Rectangle>
                <!-- Sun Rays 5 -->
                <Rectangle Stroke="White" Height= "11" Width= "25" Margin="120,0,0,60" >
                    <Rectangle.RenderTransform>
                        <RotateTransform Angle="135" CenterX="0" CenterY="0" />
                    </Rectangle.RenderTransform>
                </Rectangle>
                <!-- Sun Rays 6 -->
                <Rectangle Stroke="White" Height= "11" Width= "25" Margin="0,65,15,0" >
                    <Rectangle.RenderTransform>
                        <RotateTransform Angle="135" CenterX="0" CenterY="0" />
                    </Rectangle.RenderTransform>
                </Rectangle>
                <!-- Sun Rays 7 -->
                <Rectangle Stroke="White" Height= "11" Width= "25" Margin="75,55,0,0" >
                    <Rectangle.RenderTransform>
                        <RotateTransform Angle="45" CenterX="0" CenterY="0" />
                    </Rectangle.RenderTransform>
                </Rectangle>
                <!-- Sun Rays 8 -->
                <Rectangle Stroke="White" Height= "11" Width= "25" Margin="0,0,50,70" >
                    <Rectangle.RenderTransform>
                        <RotateTransform Angle="45" CenterX="0" CenterY="0" />
                    </Rectangle.RenderTransform>
                </Rectangle>
            </Grid>
        <!--END: TSR Confirmation-->

        <!--START: Low Adhersion-->
        <Grid Visibility="{Binding DataContext.LowAdhersionVisibility, ElementName=AuthorityUserControl}">
            <!-- Sun Body -->
            <Ellipse Width="100" Height="100" Stroke="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <!-- Rectangle -->
            <Polygon Points="150,80,102,200 200,200" HorizontalAlignment= "Center" VerticalAlignment= "Center" Margin="0,0,100,220" Stroke= "White"  >
                <Polygon.RenderTransform>
                    <RotateTransform Angle="0" CenterX="0" CenterY="0" />
                </Polygon.RenderTransform>
            </Polygon>
        </Grid>
        <!--END: Low Adhersion-->

        <!--START: Low Adhersion-->
        <Grid Visibility="{Binding DataContext.FephsVisibility, ElementName=AuthorityUserControl}">
            <!-- Inner center rectangle Body -->
            <Rectangle Stroke="White" Height= "50" Width= "200" Margin="0,0,0,0" />
            <!-- Outer center rectangle Body -->
            <Rectangle Stroke="White" Height= "60" Width= "210" Margin="0,0,0,0" />
            <!-- FEPHS Text -->
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Text="FEPHS" FontWeight="Bold" FontSize="20" Foreground="White"/>
        </Grid>
        <!--END: Low Adhersion-->
        </Grid>
    </Viewbox>
</UserControl>
